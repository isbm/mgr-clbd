                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "summary": "List cluster zones",
                "operationId": "list-zones",
                "responses": {}
            }
        },
        "/api/v1/zones/remove": {
            "delete": {
                "description": "RemoveZone removes a zone from the cluster, but only if it is empty (no nodes assigned to it).",
